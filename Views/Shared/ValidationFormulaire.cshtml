@model TPLOCAL1.Models.Form
<!DOCTYPE html>

<html>

<head>
    <title>Page de validation</title>
    <link rel="stylesheet" href="~/resources/Index.css" />
</head>

<body>

    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Page de validation</h1>
    </header>

    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/Index/Form">Liste avis</a></li>
        </ul>
    </nav>

    

    <div>
        <p>Votre formulaire a bien été pris en compte</p>
        <table>
            <tr>
                <th colspan="2">Informations personnelles</th>
            </tr>
            <tr>
                <td>Nom</td>
                <td>
                    @Model.Nom
                </td>
            </tr>
            <tr>
                <td>Prénom</td>
                <td>
                    @Model.Prenom
                </td>
            </tr>
            <tr>
                <td>Sexe</td>
                <td>
                    @Model.Sexe
                </td>
            </tr>
            <tr>
                <td>Adresse</td>
                <td>
                    @Model.Adresse
                </td>
            </tr>
            <tr>
                <td>Code Postal</td>
                <td>
                    @Model.CodePostal
                </td>
            </tr>
            <tr>
                <td>Ville</td>
                <td>
                    @Model.Ville
                </td>
            </tr>
            <tr>
                <td>Adresse mail</td>
                <td>
                    @Model.Mail
                </td>
            </tr>
        </table>

        <p></p>

        <table>
            <tr>
                <th colspan="2">Informations formation suivie</th>
            </tr>
            <tr>
                <td>Date début formation</td>
                <td>
                    @Model.DebutDate
                </td>
            </tr>
            <tr>
                <td>Formation suivie</td>
                <td>
                    @Model.Formation
                </td>
            </tr>
        </table>

        <p></p>

        <table>
            <tr>
                <th colspan="2">Avis sur la formation</th>
            </tr>
            <tr>
                <td>Formation Cobol</td>
                <td>
                    @Model.Cobol
                </td>
            </tr>
            <tr>
                <td>Formation C#</td>
                <td>
                    @Model.CS
                </td>
            </tr>
        </table>
    </div>
    

    

</body>

</html>
