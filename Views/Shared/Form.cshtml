@model TPLOCAL1.Models.Form
@Html.ValidationSummary(false,"")
<!DOCTYPE html>

<html>

<head>
    <title>Formulaire</title>
    <link rel="stylesheet" href="~/resources/Index.css" />
</head>

<body>

    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Formulaire TP HN avis</h1>
    </header>

    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/Index/OpinionList">Liste avis</a></li>
        </ul>
    </nav>

    
    <form asp-action="ValidationFormulaire">
        <table>
            <tr>
                <th colspan="2">Informations personnelles</th>
            </tr>
            <tr>
                <td>Nom</td>
                <td>
                    <input asp-for="Nom" type="text"/>
                    <span asp-validation-for="Nom"></span>
                </td>
            </tr>
            <tr>
                <td>Prénom</td>
                <td>
                    <input asp-for="Prenom"/>
                    <span asp-validation-for="Prenom"></span>
                </td>
            </tr>
            <tr>
                <td>Sexe</td>
                <td>
                    <select asp-for="Sexe">
                        <option value="Selectionnez un sexe">Selectionnez un sexe</option>
                        <option value="Homme">Homme</option>
                        <option value="Femme">Femme</option>
                        <option value="Autre">Autre</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Adresse</td>
                <td>
                    <input asp-for="Adresse"/>
                    <span asp-validation-for="Adresse"></span>
                </td>
            </tr>
            <tr>
                <td>Code Postal</td>
                <td>
                    <input asp-for="CodePostal"/>
                    <span asp-validation-for="CodePostal"></span>
                </td>
            </tr>
            <tr>
                <td>Ville</td>
                <td>
                    <input asp-for="Ville"/>
                    <span asp-validation-for="Ville"></span>
                </td>
            </tr>
            <tr>
                <td>Adresse mail</td>
                <td>
                    <input asp-for="Mail"/>
                    <span asp-validation-for="Mail"></span>
                </td>
            </tr>
        </table>

        <table>
            <tr>
                <th colspan="2">Informations formation suivie</th>
            </tr>
            <tr>
                <td>Date début formation</td>
                <td>
                    <input asp-for="DebutDate" type="date" />
                    <span asp-validation-for="DebutDate"></span>
                </td>
            </tr>
            <tr>
                <td>Formation suivie</td>
                <td>
                    
                        <select asp-for="Formation">
                            <option value="Selectionnez un cours">Selectionnez un cours</option>
                            <option value="Cobol Training">Cobol Training</option>
                            <option value="Object Training">Object Training</option>
                            <option value="Dual Skills Training">Dual Skills Training</option>
                        </select>
                    
                </td>
            </tr>
        </table>

        <table>
            <tr>
                <th colspan="2">Avis sur la formation</th>
            </tr>
            <tr>
                <td>Formation Cobol</td>
                <td>
                    <input asp-for="Cobol"/>
                </td>
            </tr>
            <tr>
                <td>Formation C#</td>
                <td>
                    <input asp-for="CS" />
                    <span asp-validation-for="CS"></span>
                </td>
            </tr>
        </table>

        <input type="submit" value="Validation" />

    </form>

</body>

</html>
